# إعدادات بوت الأنصار الله اليمني
# =================================

# معلومات البوت الأساسية
BOT_TOKEN=YOUR_BOT_TOKEN_HERE
CHAT_ID=YOUR_CHAT_ID_HERE
ADMIN_ID=YOUR_ADMIN_ID_HERE

# إعدادات الموقع
WEBSITE_NAME=موقع_الأنصار_الله
WEBSITE_URL=https://www.ansarollah.com.ye

# إعدادات المراقبة
MONITORING_INTERVAL=120
MAX_RETRIES=3
REQUEST_TIMEOUT=30

# إعدادات النشر
AUTO_PUBLISH=true
REQUIRE_APPROVAL=false
MAX_MESSAGE_LENGTH=4096

# إعدادات Telegraph
TELEGRAPH_ENABLED=true
TELEGRAPH_ACCOUNT_NAME=موقع_الأنصار_الله
TELEGRAPH_AUTHOR_NAME=الأنصار الله
TELEGRAPH_AUTHOR_URL=https://www.ansarollah.com.ye

# إعدادات قاعدة البيانات
DATABASE_FILE=data/ansarollah_bot.db
BACKUP_ENABLED=true
BACKUP_INTERVAL=21600

# إعدادات السجلات
LOG_LEVEL=INFO
LOG_FILE=logs/bot.log
LOG_MAX_SIZE=10485760
LOG_BACKUP_COUNT=5

# إعدادات Docker
CONTAINER_NAME=ansarollah-news-bot
NETWORK_NAME=ansarollah-net
VOLUME_PREFIX=ansarollah

# إعدادات Redis (اختياري)
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# إعدادات المراقبة والتنبيهات
HEALTH_CHECK_INTERVAL=300
ALERT_ON_ERROR=true
ALERT_CHAT_ID=YOUR_ADMIN_ID_HERE

# إعدادات الأداء
WORKER_THREADS=2
MEMORY_LIMIT=512m
CPU_LIMIT=0.5

# إعدادات الأمان
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=30
RATE_LIMIT_WINDOW=60

# إعدادات متقدمة
DEBUG_MODE=false
VERBOSE_LOGGING=false
ENABLE_METRICS=true
METRICS_PORT=8080